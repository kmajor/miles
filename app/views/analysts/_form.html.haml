= form_for @analyst do |f|
  - if @analyst.errors.any?
    #error_explanation
      %h2= "#{pluralize(@analyst.errors.count, "error")} prohibited this analyst from being saved:"
      %ul
        - @analyst.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .actions
    = f.submit 'Save'
